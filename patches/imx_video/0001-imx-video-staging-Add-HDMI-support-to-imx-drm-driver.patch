+static void hdmi_set_clk_regenerator(struct imx_hdmi *hdmi, u32 pixel_clk_rate,
+					u32 audio_rate, u32 hdmi_ratio)
+{
+	unsigned int clk_n, clk_cts;
+
+	clk_n = hdmi_compute_n(audio_rate, pixel_clk_rate, hdmi_ratio);
+	clk_cts = hdmi_compute_cts(audio_rate, pixel_clk_rate, hdmi_ratio);
+
+	if (clk_cts == 0) {
+		pr_debug("%s: pixel clock not supported: %d\n",
+			__func__, (int)pixel_clk_rate);
+		return;
+	}
+
+	pr_debug("%s: samplerate=%d  ratio=%d  pixelclk=%d  N=%d  cts=%d\n",
+		__func__, audio_rate, hdmi_ratio, pixel_clk_rate,
+		clk_n, clk_cts);
+
+	hdmi_set_clock_regenerator_n(hdmi, clk_n);
+	hdmi_set_clock_regenerator_cts(hdmi, clk_cts);
+}
