+	}
+
+	if (!iter) {
+		dev_err(fb->dev->dev, "%s: failed to find idr\n", __func__);
+		return;
+	}
+
+	ev.fb_id = id;
+	idr_remove(&udev->idr, id);
+
+	utinydrm_send_event(tdev, &ev);
+
+	drm_fb_cma_destroy(fb);
