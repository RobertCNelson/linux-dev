+
+	if (mipi_dbi_debugfs_readreg(m, reg, MIPI_DCS_GET_SIGNAL_MODE,
+				     "Signal Mode", &val8, 1)) {
+		seq_bit_on_off(m, "Tearing Effect Line:", val8, 7);
+		seq_bit_text(m, "Tearing Effect Line Output Mode: Mode",
