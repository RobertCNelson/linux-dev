+	.write = mipi_dbi_spi3_write,
+	.gather_write = mipi_dbi_spi3_gather_write,
+	.read = mipi_dbi_spi3_read,
+	.reg_format_endian_default = REGMAP_ENDIAN_DEFAULT,
+	.val_format_endian_default = REGMAP_ENDIAN_DEFAULT,
