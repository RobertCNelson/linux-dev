+
+	/* FIXME: if (fb == tdev->fbdev_helper->fb) */
+	if (tdev->fbdev_helper && !udev->fbdev_fb_sent) {
+		utinydrm_fb_create_event(tdev->fbdev_helper->fb);
+		udev->fbdev_fb_sent = true;
